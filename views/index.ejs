	<link href="bundle.css" rel="stylesheet">
	<title>QRead<%=" " + book %></title>
	<script id="content" type="text/template">
		<%-template%>
	</script>
	<% if (font) { %>
	<style>
		p {		
				<% if (font == 'e') { %>
					 line-height: 200% !important;
					 font-family:Arial, Helvetica, sans-serif !important;
					 font-size : 1.2em !important;
				<% } %>
		}
	</style>
	<% } %>
	
	<%if (mode) { %>
		<style>
		p {		
				<% if (mode == 'n') { %>
					 background-color: #1B1B1B;
					 color: white;
				<% } %>
		}
		
		body {
			background: black;
		}
		
		.centerp {
			color: white;
		}
	</style>
	<% } %>
	
	<%if (fontsize) {%>
		<style>
		p {		
			font-size: <%=fontsize%>rem !important;
		}
		</style>
	<% } %>
  </head>
  <body  fullbleed vertical layout unresolved > 
	<div id="debug" class="centerp height5"></div>
	<span id="auto" class="auto centerp" style="cursor:pointer;"><%=autostatus%></span>
	<core-pages selected=<%=page - firstpage%> id="card">	
		<% for(var i=0; i< data.length ; i++) {%>			
			<%- include item.ejs %>
		<% } %>			
	</core-pages>	
	<input type='hidden' id="pos" value=<%=pos%>>
	<input type='hidden' id="page" value=<%=page%>>
	<input type='hidden' id="book" value=<%=book%>>
	<input type='hidden' id="firstpage" value=<%=firstpage%>>
	<input type='hidden' id="lastpage" value=<%=firstpage%>>
	<input type='hidden' id="lock" value=0>
	<input type='hidden' id="autotts" value=0>
	<input type='hidden' id="title" value="<%="QRead " + book%>">
	<input type='hidden' id="autolink" value="<%=autolink%>">
	<input type='hidden' id="lastcmd" >
	<input type='hidden' id="step" value=<%=step%>>
	
  <script src="/socket.io/socket.io.js"></script>
  <script src="/views/main.js"></script>
  <script src="/ejs.js"></script>
</body>
</html>